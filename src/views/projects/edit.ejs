<% include ../partials/header %>

<div class="container">    
    <h1 style="text-align:center; margin-bottom: 25px">Edit <%= project.name %></h1>
    <div style="width:50%; margin:0 auto">
            <form action="/projects/<%= project._id %>?_method=PATCH" method="POST">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="project[name]" value="<%= project.name %>">
                </div>

                <div class="form-group">
                        <input class="form-control" type="text" name="project[description]" value="<%= project.description %>">
                    </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/projects">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
