<% include ../partials/header %>

<div class="container">    
    <h1 class="project-head">Add a new project</h1>
    <div class="d-flex justify-content-center">
        <div class="col-md-6">
            <div style="width:50%; margin:0 auto">
                <form action="/projects" method="POST">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="project[name]" placeholder="Name">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="project[avatar]" placeholder="Avatar">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="project[duration]" placeholder="Duration">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="4" type="text" name="project[description]" placeholder="Description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/projects">Go Back</a>
        </div>
    </div>
</div>

</div>

<% include ../partials/footer %>
