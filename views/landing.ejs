<% include ./partials/header %>

<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Awaaz.De Programming Challenge</h1>
        <p class="lead">This is a simple project management application made with Node, Express, MongoDB, Mongoose by Naveen Sagar</p>
        <a class="btn btn-primary btn-lg" href="/projects/new" role="button">Add new Project</a>
    </div>

<h1 class="project-head text-center">Current Projects</h1>


    <% projects.forEach((project) => { %>
        <div class="card">  
            <div class="card-body">
                <h5 class="card-title"> <a href="/projects/<%= project._id %>"><%= project.name %></a></h5>
                <p class="card-text"><%= project.description%></p>
                <!-- use form to send a put request-->
                <a href="/projects/<%=project._id%>/edit" class="btn btn-sm btn-warning">Edit</a>
                <!-- use forn to send a delete request-->
                <form class="delete-form" action="/projects/<%= project._id%>?_method=DELETE" method="post">
                    <button class="btn btn-sm btn-danger">Delete</button>
                </form>
            </div>
        </div>
        <% }) %>        
    </div>
    
    <% include ./partials/footer%>